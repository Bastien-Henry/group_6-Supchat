<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/fragment_create_account_title"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/fragment_create_account_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="@string/fragment_create_account_hint"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:minWidth="250dp" />

        <EditText
            android:id="@+id/fragment_create_account_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:hint="@string/fragment_create_account_password_hint"
            android:minWidth="250dp" />

        <Button
            android:id="@+id/fragment_create_account_validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:minWidth="250dp"
            android:text="@string/fragment_create_account_validate" />

        <Button
            android:id="@+id/fragment_create_account_go_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:minWidth="250dp"
            android:text="@string/fragment_create_account_go_to_login" />
    </LinearLayout>

</ScrollView>